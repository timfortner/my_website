@{
    ViewData["Title"] = "Home Page";
}

@model List<Expense>
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Name</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Description</td>
                </tr>
            }
        </tbody>
</div>